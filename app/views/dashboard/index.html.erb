<div class="container mt-2">
  <div class="row">
    <aside class="col side-navbar temp">
		<%= link_to root_path, class: "d-flex align-items-center mb-3 py-1 rounded-circle", style: 'width: fit-content;' do%>
  			<span class="me-3"><%= image_tag "twitter.png", style:"height: 25px;position: relative;bottom: 2px; left: 8px"%></span>
		<% end %>
    	<%= link_to root_path, class: "d-flex align-items-center mb-3  px-3 py-1 rounded-pill", style: 'width: fit-content;' do%>
	  		<span class="me-3"><%= image_tag "home.png", style:"height: 22px;position: relative;bottom: 3px;"%></span>Home
		<% end %>
		<%= link_to root_path, class: "d-flex align-items-center mb-3  px-3 py-1 rounded-pill", style: 'width: fit-content;' do%>
	  		<span class="me-3"><%= image_tag "hash.png", style:"height: 22px;position: relative;bottom: 3px;"%></span>Explore
		<% end %>
		<%= link_to root_path, class: "d-flex align-items-center mb-3  px-3 py-1 rounded-pill", style: 'width: fit-content;' do%>
	  		<span class="me-3"><%= image_tag "bell.png", style:"height: 22px;position: relative;bottom: 3px;"%></span>Notifications
		<% end %>
		<%= link_to root_path, class: "d-flex align-items-center mb-3  px-3 py-1 rounded-pill", style: 'width: fit-content;' do%>
	  		<span class="me-3"><%= image_tag "email.png", style:"height: 22px;position: relative;bottom: 3px;"%></span>Messages
		<% end %>
		<%= link_to root_path, class: "d-flex align-items-center mb-3  px-3 py-1 rounded-pill", style: 'width: fit-content;' do%>
	  		<span class="me-3"><%= image_tag "bookmark-white.png", style:"height: 22px;position: relative;bottom: 3px;"%></span>Bookmark
		<% end %>
		<%= link_to root_path, class: "d-flex align-items-center mb-3  px-3 py-1 rounded-pill", style: 'width: fit-content;' do%>
	  		<span class="me-3"><%= image_tag "user.png", style:"height: 22px;position: relative;bottom: 3px;"%></span>Profile
		<% end %>
		<%= link_to root_path, class: "d-flex align-items-center mb-3  px-3 py-1 rounded-pill", style: 'width: fit-content;' do%>
	  		<span class="me-3"><%= image_tag "more.png", style:"height: 22px;position: relative;bottom: 3px;"%></span>More
		<% end %>
		<%= link_to root_path, class: "d-flex align-items-center mb-3 rounded-pill", style: 'width: 40%;' do%>
	  		<span class="me-3"><%= button_tag "Tweet", class:"btn btn-primary btn-rounded-pill", style:"width: 169px;border-radius: 20px;"%></span>
		<% end %>
		<%= link_to "Log out", destroy_user_session_path, data: { "turbo-method": :delete }, class: 'btn btn-primary btn-lg'%> 
    </aside>
    <div class="col">
      <%= form_with model: Tweet.new, url: tweets_path,method: :post, local: :true do |f|%>
			<%= f.text_field :body %>
			<%= f.submit %>
		<% end %>


		<% Tweet.find_each do |t|%>
			<li><%= t.body %></li>
		<% end %>
    </div>
    <div class="col">
      Column
    </div>
  </div>
</div>

